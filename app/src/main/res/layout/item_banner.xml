<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imgviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <RelativeLayout
        android:layout_alignBottom="@id/imgviewbackgroundbanner"
        android:id="@+id/relativeitembanner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:id="@+id/imgviewbanner"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:layout_toRightOf="@+id/imgviewbanner"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/imgviewbanner"
            android:id="@+id/tvmabanner"
            android:textSize="17sp"
            android:text="Áo đẹp cho nữ"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/imgviewbanner"
            android:layout_below="@+id/tvmabanner"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvnamebanner"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="Đây là bộ váy đẹp nhất"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
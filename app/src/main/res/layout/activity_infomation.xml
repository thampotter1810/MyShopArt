<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.InfomationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#C7F2FF"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="2dp"
                android:src="@android:drawable/ic_input_add"
                android:id="@+id/imgsanpham"
                android:layout_width="150dp"
                android:layout_height="220dp">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Tên sản phẩm"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/tvtensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:text="Giá sản phẩm"
                android:textColor="#FC0000"
                android:textSize="20sp"
                android:id="@+id/tvgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Kích thước"
                android:textSize="20sp"
                android:id="@+id/tvkichthuoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Loại"
                android:textSize="20sp"
                android:id="@+id/tvloaisp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textStyle="bold"
                android:text="tình trạng"
                android:textSize="20sp"
                android:id="@+id/tvtinhtrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <Spinner

                android:layout_margin="3dp"
                android:padding="2dp"
                android:background="@drawable/spinner"
                android:textAlignment="center"
                android:id="@+id/spinner"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

            <Button
                android:background="@drawable/custom_button2"
                android:ems="9"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:text="Thêm vào giỏ hàng"
                android:id="@+id/btnthemgiohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>

    <TextView
        android:text="Mô tả chi tiết"
        android:textStyle="bold"
        android:textColor="#2951E6"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_margin="5dp"
        android:text="Đây là thông tin chi tiết hiển thị về giới thiệu chất liệu sản phẩm cũng như các thông tin khác của sản phẩm"
        android:textSize="20sp"
        android:id="@+id/tvgioithieusp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

</LinearLayout>